---
import fetch from 'node-fetch';

// Define the structure of the data returned from GitHub API
interface CommitData {
  sha: string;
}

const getCommitHash = async (): Promise<string> => {
  const response = await fetch('https://api.github.com/repos/Nikos-Stuff/web/commits/main');
  const data = await response.json() as CommitData;  // Type assertion here
  return data.sha;
};

const commitHash = await getCommitHash();
const shortCommitHash = commitHash.slice(0, 7); // Shorten the commit hash
const commitUrl = `https://github.com/Nikos-Stuff/web/commit/${commitHash}`;
---

<a href={commitUrl} target="_blank" rel="noopener noreferrer">
  <code>{shortCommitHash}</code>
</a>