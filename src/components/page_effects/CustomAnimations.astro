<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  function init() {
    console.log("Page Scroll Animations Loaded");
    gsap.registerPlugin(ScrollTrigger);

    // Get all the elements with the .animate class
    let animatedStuff = document.querySelectorAll(".animate");

    // Loop through each element and create a ScrollTrigger for it
    animatedStuff.forEach((element) => {
      gsap.from(element, {
        opacity: 0,
        y: 50,
        duration: 1,
        ease: "power2.out",
        scrollTrigger: {
          trigger: element,
          start: "top 70%", 
          end: "bottom 30%",
          toggleActions: "play reverse play reverse",
          //markers: true, 
        },
      });
    });
  }

  document.addEventListener("DOMContentLoaded", init);
</script>