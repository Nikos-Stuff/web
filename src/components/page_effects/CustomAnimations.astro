<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  function init() {
    gsap.registerPlugin(ScrollTrigger);

    // Get all the elements with the .animate class
    let animatedStuff = document.querySelectorAll(".animate");

    // Loop through each element and create a ScrollTrigger for it
    animatedStuff.forEach((element) => {
      gsap.from(element, {
        opacity: 0,
        y: 50,
        duration: 1,
        ease: "elastic.out(1, 0.7)",
        scrollTrigger: {
          trigger: element,
          start: "top 70%",
          end: "bottom 30%",
          toggleActions: "play none none reverse",
          //markers: true,
        },
      });
    });
  }

  function timeoundHandle() {
    setTimeout(() => {
      console.log("Page Scroll Animations Loaded");
      init();
    }, 1000);
  }

  document.addEventListener("DOMContentLoaded", timeoundHandle);
</script>
